	<!-- Clinical Encounter -->
	<bean id="kenyaemr.common.form.clinicalEncounter" class="org.openmrs.module.kenyacore.form.FormDescriptor">
		<property name="targetUuid" value="${metadata.form.CLINICAL_ENCOUNTER}" />
		<property name="apps">
			<set>
				<ref bean="kenyaemr.app.clinician" />
