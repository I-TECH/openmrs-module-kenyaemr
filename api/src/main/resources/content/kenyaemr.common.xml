	<!-- Other Medications -->
	<bean id="kenyaemr.common.form.otherMedications" class="org.openmrs.module.kenyacore.form.FormDescriptor">
		<property name="targetUuid" value="d4ff8ad1-19f8-484f-9395-04c755de9a47" />
		<property name="apps">
			<set>
				<ref bean="kenyaemr.app.clinician" />
